<h1>User#show</h1>
<p>Find me in app/views/user/show.html.erb</p>

<h2>Profile of: <%= @user.name %> </h2>
<p>Email: <%= @user.email %></p>

<div id="upcoming_events">
  <p>Upcoming events:</p>
  <ol>
      <% @upcoming_events.each do |event| %>
        <li><p><%= event.description %>, creator: <%= event.creator.name%></p></li>
        <% end %>
  </ol>
</div>

<div id="events_list">
  <p>Created events:</p>
  <ol>
    <% @user.created_events.each do |event| %>
    <li><p><%= event.description %> Date: <%= event.date %>, Location: <%= event.location%>.</p></li>
    <% end %>
  </ol>
</div>

<div id="attendence_list">
  <p>Events <%= @user.name %> has been invited to:</p>
  <ol>
    <% @user.invitations.each do |invite| %>
    <li><p><%= invite.event.description %>
      Date: <%= invite.event.date %>,
      Location: <%= invite.event.location%>
      Attending: <%= invite.attending%></p></li>
    <% end %>
  </ol>
</div>

<div id="previous_events">
  <p>Previous events:</p>
  <ol>
      <% @previous_events.each do |event| %>
        <li><p><%= event.description %>, creator: <%= event.creator.name%></p></li>
        <% end %>
  </ol>
</div>
